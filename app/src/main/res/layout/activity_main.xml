<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/main_bg"

    tools:context="com.example.hamzali.pluresjet.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="150dp"
            >

            <ImageView
                android:layout_width="110dp"
                android:layout_height="100dp"

                android:layout_margin="2dp"

                android:clickable="true"
                android:onClick="ucakKiralama"

                android:id="@+id/ozel_ucak_kiralama"
                android:background="@drawable/ozel_ucak_kiralama"
                />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="ÖZEL UÇAK KIRALAMA"
                android:background="#434649"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_below="@id/ozel_ucak_kiralama"
                android:textAlignment="center"
                android:id="@+id/ozel_ucak_kiralama_txt"
                />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_toEndOf="@+id/ozel_ucak_kiralama"

                android:clickable="true"
                android:onClick="ambulansKiralama"


                android:id="@+id/ambulans_ucak"
                android:background="@drawable/ambulans_ucak_kiralama"
                />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="AMBULANS UÇAK"
                android:background="#434649"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_below="@id/ambulans_ucak"
                android:layout_toEndOf="@+id/ozel_ucak_kiralama_txt"
                android:textAlignment="center"
                android:id="@+id/ambulans_ucak_txt"
                />


            <ImageView
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_toEndOf="@+id/ambulans_ucak"

                android:clickable="true"
                android:onClick="havaKargo"

                android:background="@drawable/hava_kargo"
                android:id="@+id/hava_kargo"
                />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="HAVA KARGO\n"
                android:background="#434649"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_below="@id/ambulans_ucak"
                android:layout_toEndOf="@+id/ambulans_ucak_txt"
                android:textAlignment="center"
                android:id="@+id/hava_kargo_txt"
                />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_below="@+id/ozel_ucak_kiralama_txt"


                android:clickable="true"
                android:onClick="ucakBilet"


                android:background="@drawable/ucak_bileti_bt"
                android:id="@+id/ucak_bileti"
                />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="UÇAK BİLETİ\n"
                android:background="#434649"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_below="@id/ucak_bileti"
                android:textAlignment="center"
                android:id="@+id/ucak_bileti_txt"
                />


            <ImageView
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_toEndOf="@+id/ucak_bileti"
                android:layout_below="@+id/ambulans_ucak_txt"


                android:clickable="true"
                android:onClick="turizm"

                android:background="@drawable/turizm_bt"
                android:id="@+id/turizm"
                />


            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="TURİZM\n"
                android:background="#434649"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_below="@id/ucak_bileti"
                android:layout_toEndOf="@+id/ucak_bileti_txt"
                android:textAlignment="center"
                android:id="@+id/turizm_txt"
                />


            <ImageView
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_toEndOf="@+id/turizm"
                android:layout_below="@+id/ozel_ucak_kiralama_txt"

                android:background="@drawable/iletisim_bt"
                android:id="@+id/iletisim"


                android:clickable="true"
                android:onClick="iletisim"
                />


            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="İLETİŞİM\n"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_below="@id/ucak_bileti"
                android:layout_toEndOf="@+id/turizm_txt"
                android:textAlignment="center"
                android:id="@+id/iletisim_txt"
                />
        </RelativeLayout>

    <include layout="@layout/ara_cikis_layout"/>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
